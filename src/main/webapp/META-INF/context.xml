<?xml version="1.0" encoding="UTF-8"?>
<Context path="/pstadmin">
  <Resource auth="Container" factory="org.jboss.weld.resources.ManagerObjectFactory" name="BeanManager" type="javax.enterprise.inject.spi.BeanManager"/>
  
  <Resource
      name="h2"
      type="javax.sql.DataSource"
      url="jdbc:h2:${catalina.base}/data/pstadmin;FILE_LOCK=NO;INIT=RUNSCRIPT FROM 'classpath:scripts/create.sql'"
      driverClassName="org.h2.Driver"
      username="pstadmin"
      password="pstadmin"
      maxActive="100"
      maxIdle="20"/> 
  
  
</Context>
